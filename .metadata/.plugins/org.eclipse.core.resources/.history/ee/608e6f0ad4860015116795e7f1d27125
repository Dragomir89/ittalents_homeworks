<?php
// Задача 1:
// Имате двумерен масив 6х5 от естествени числа, чийто стойности са
// въведени предварително.
// Да се състави програма, чрез която се извеждат елементите от масива
// с най-малката и най-голямата стойност.
// Пример:
// 48,72,13,14,15
// 21,22,53,24,75
// 31,57,33,34,35
// 41,95,43,44,45
// 59,52,53,54,55
// 61,69,63,64,65
// Изход:
// най-малко 13;
// най-голямо 95



$arr = [
		[48,72,13,14,15],
		[21,22,53,24,75],
		[31,57,33,34,35],
		[41,95,43,44,45],
		[59,52,53,54,55],
		[61,69,63,64,65],
];

$len = count($arr);

$min = 0;
$max = 0;

for ($i = 0; $i < $len; $i++) {
	
	$currentMin = min($arr[$i]);
	$currentMax = max($arr[$i]);
	
	if ($max < $currentMax) {
		$max = $currentMax;
	}
	if ($min > $currentMin) {
		$min = $currentMin;
	}
	
}

echo "min = $min  |  max = $max";



